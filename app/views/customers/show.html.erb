<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-end mb-5 w-full">
      <div class="inline-block ml-2">
        <%= link_to "Edit this customer", edit_customer_path(@customer), class: "mt-2 rounded-lg py-2 px-4 bg-sky-200 inline-block font-medium dark:text-zinc-700" %>
      </div>
			<div class="inline-block ml-2">
        <%= link_to "Back to customers", customers_path, class: "mt-2 rounded-lg py-2 px-4 bg-gray-200 inline-block font-medium dark:text-zinc-700" %>
      </div>
      <div class="inline-block ml-2">
        <%= button_to "Destroy this customer", @customer, method: :delete, class: "cursor-pointer mt-2 rounded-lg py-2 px-4 bg-red-200 font-medium dark:text-zinc-700" %>
      </div>
    </div>

    <%= render @customer %>

  </div>
</div>
