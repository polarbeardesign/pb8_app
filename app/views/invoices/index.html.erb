<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Invoices" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Invoices</h1>
    <%= link_to "New invoice", new_invoice_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="invoices" class="min-w-full">
    <% @invoices.each do |invoice| %>
      <div class="border-2 border-gray-200 rounded py-2 px-3 mb-4" >
      <%= render invoice %>
      <p>
        <%= link_to "Show this invoice", invoice, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-500" %>
      </p>
      </div>
    <% end %>
  </div>
</div>
