<%= form_with(model: invoice, class: "contents") do |form| %>
  <% if invoice.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
        <% invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :customer_id %>
    <%= form.text_field :customer_id, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 dark:bg-slate-800 dark:text-white w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :invoice_number %>
    <%= form.number_field :invoice_number, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 dark:bg-slate-800 dark:text-white w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :total_amount %>
    <%= form.text_field :total_amount, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 dark:bg-slate-800 dark:text-white w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :tax_amount %>
    <%= form.text_field :tax_amount, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 dark:bg-slate-800 dark:text-white w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :invoice_date %>
    <%= form.date_field :invoice_date, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 dark:bg-slate-800 dark:text-white w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :paid %>
    <%= form.checkbox :paid, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :pdf_address %>
    <%= form.text_field :pdf_address, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 dark:bg-slate-800 dark:text-white w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :button_code %>
    <%= form.textarea :button_code, rows: 8, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 dark:bg-slate-800 dark:text-white w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
