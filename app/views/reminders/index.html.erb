<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Reminders" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Reminders</h1>
    <%= link_to "New reminder", new_reminder_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <h2 class="font-bold text-3xl my-2">Now: <%= @today.size %></h2>
  <div id="reminders" class="min-w-full">
    <% @today.each do |reminder| %>
    <div class="border-2 border-gray-200 rounded py-2 px-3 mb-4" >
      <%= render reminder %>
      <div class="flex flex-wrap justify-center">
        <%= link_to "Show this reminder", reminder, class: "m-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:text-slate-600" %>
        <%= link_to "Edit this reminder", edit_reminder_path(reminder), class: "m-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:text-slate-600" %>
      </div>
    </div>  
    <% end %>
  </div>
  <h2 class="font-bold text-3xl my-2">Next: <%= @next.size %></h2>
  <div id="reminders" class="min-w-full">
    <% @next.each do |reminder| %>
    <div class="border-2 border-gray-200 rounded py-2 px-3 mb-4" >
      <%= render reminder %>
      <div class="flex flex-wrap justify-center">
        <%= link_to "Show this reminder", reminder, class: "m-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:text-slate-600" %>
        <%= link_to "Edit this reminder", edit_reminder_path(reminder), class: "m-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:text-slate-600" %>
      </div>
    </div>  
    <% end %>
  </div>
  <h2 class="font-bold text-3xl my-2">Future: <%= @today.size %></h2>
  <div id="reminders" class="min-w-full">
    <% @someday.each do |reminder| %>
    <div class="border-2 border-gray-200 rounded py-2 px-3 mb-4" >
      <%= render reminder %>
      <div class="flex flex-wrap justify-center">
        <%= link_to "Show this reminder", reminder, class: "m-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:text-slate-600" %>
        <%= link_to "Edit this reminder", edit_reminder_path(reminder), class: "m-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:text-slate-600" %>
      </div>
    </div>  
    <% end %>
  </div>

</div>
