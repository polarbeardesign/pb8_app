<div class="mx-auto md:w-2/3 mb-16 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Roles" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Roles</h1>
    <%= link_to "New role", new_role_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="roles" class="min-w-full">
    <% @roles.each do |role| %>
      <%= render role %>
      <p>
        <%= link_to "Show this role", role, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-500" %>
      </p>
    <% end %>
  </div>
</div>
