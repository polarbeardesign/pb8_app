<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing work period</h1>

  <%= render "form", work_period: @work_period %>

  <%= link_to "Show this work period", @work_period, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-500" %>
  <%= link_to "Back to parent task", task_path(@work_period.task_id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium dark:bg-slate-500" %>
</div>
