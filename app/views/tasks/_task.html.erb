<div id="<%= dom_id task %>">

  <p>
    <strong class="block font-medium"><%= task.customer.org_name %></strong>
  </p>
  
  <h2 class="font-bold text-3xl mb-1">
    <%= task.task_name %>
  </h2>


<div class="relative overflow-x-auto">
<table>
  <thead class="text-xs text-white  bg-[#1e6da6] dark:bg-gray-700 dark:text-gray-400">
<tr>
<th>task_id</th>
<th>status</th>
<th>created_at</th>
<th>priority</th>
<th>due date</th>
<th>associated files</th>
</tr>
</thead>
<tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-[#f2f7fa] even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
<td><%=task.id %></td>
<td><%=task.status %></td>
<td><%=task.created_at.strftime("%Y-%m-%d") %></td>
<td><%=task.priority %></td>
<td><%=task.due_date %></td>
<td>&nbsp;</td>
</tr>
</table>
</div>

<% if !task.description.blank? %>
	<div data-controller="accordion" class="my-5">
			<details data-accordion-target="item" data-action="toggle->accordion#toggle">
				<summary class="block font-medium mb-1">
					Description:
				</summary>
				<div class="accordion-content">
					<%= markdown(task.description) %>
				</div>
			</details>
	</div>
<% end %>

<% if !task.notes.blank? %>
	<div data-controller="accordion" class="my-5">
			<details data-accordion-target="item" data-action="toggle->accordion#toggle">
				<summary class="block font-medium mb-1">
					Notes:
				</summary>
				<div class="accordion-content">
					<%= markdown(task.notes) %>
				</div>
			</details>
	</div>
<% end %>

</div>