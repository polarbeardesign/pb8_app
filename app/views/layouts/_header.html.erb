<header>

    <div class="flex flex-1 justify-end m-4 text-xs">
    <% if authenticated? %>
      <%= Current.user.email_address %> @ <%= Current.user.sessions.last.created_at.strftime("%b %d, %H:%M") %> |&nbsp;<%= button_to "Log out", session_path, method: :delete if authenticated? %>
      <% else %>
      <%= link_to "Login", new_session_path %>
      <% end %>
    </div>

<nav data-controller="menu" class="border-b p-4">
  <div class="flex items-center justify-between">
    <!-- Logo -->
		<%= link_to recipes_path do %>
			<%= image_tag "logo.svg", class: "w-32" %>
		<% end %>

    <!-- Hamburger (only on mobile) -->
    <button
      data-action="menu#toggle"
      class="md:hidden text-gray-700 focus:outline-none"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <!-- Desktop Menu (flex & right-aligned from md up) -->
    <div class="hidden md:flex md:ml-auto md:space-x-4">
    <% if authenticated? %>
      <%= link_to "Tasks", tasks_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Reminders", reminders_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Weekly", work_periods_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Customers", customers_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Code Notes", notes_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
    <% else %> 
      <%= link_to "Home", home_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "About", about_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Services", services_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Portfolio", portfolio_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Clients", new_session_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Contact", contact_path, class: "text-[#68a5d2] hover:text-[#3a7cab]" %>
    <% end %>
    </div>
  </div>

  <!-- Mobile Menu (stacked & toggled) -->
  <div
    data-menu-target="menu"
    class="hidden flex-col space-y-2 mt-2 md:hidden">
    <% if authenticated? %>
      <%= link_to "Tasks", tasks_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Reminders", reminders_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Weekly", work_periods_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Customers", customers_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
      <%= link_to "Code Notes", notes_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
    <% else %> 
	  <%= link_to "Home", home_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
	  <%= link_to "About", about_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
	  <%= link_to "Services", services_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
	  <%= link_to "Portfolio", portfolio_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
	  <%= link_to "Contact", contact_path, class: "block text-[#68a5d2] hover:text-[#3a7cab]" %>
    <% end %>
    <button data-action="menu#close" class="text-red-600">âœ• Close</button>
  </div>
</nav>


</header>
